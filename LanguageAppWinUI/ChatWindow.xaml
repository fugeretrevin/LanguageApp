<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="LanguageAppWinUI.ChatWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LanguageAppWinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="ChatWindow">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer Background="#FF2B2B2B" Margin="10" Padding="10" BorderBrush="#FF2B2B2B" Grid.Row="0" Grid.Column="1">
       
            <RichTextBlock Name="ChatDisplay" Foreground="White">
                
            </RichTextBlock>
      
        </ScrollViewer>
        
        <RichTextBlock Name="AiFeedbackDisplay" Margin="10" Padding="10" Foreground="White" Grid.Row="0" Grid.Column="2" >
            <Paragraph>
                <Run Text="Feedback area"></Run>
            </Paragraph>
        </RichTextBlock>
        <RichEditBox Name="CorrectedUserDisplay" Margin="10" Padding="10" Foreground="White" Grid.Row="0" Grid.Column="0" >
            
        </RichEditBox>


            <RichEditBox Name="InputBox"
                Background="Transparent"
                Foreground="White"
                PlaceholderText="Type in here"
                BorderThickness="1"
               
                KeyDown="InputBox_KeyDown"
                AcceptsReturn="False"
                Height="40" 
                Grid.Row="1" 
                Grid.Column="1" 
                Padding="4" 
                Margin="10"
                />
   
    </Grid>
    
</Window>
