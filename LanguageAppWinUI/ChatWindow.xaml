<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="LanguageAppWinUI.ChatWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LanguageAppWinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Background="#202020">




    <Grid Background="#202020">

                <MediaPlayerElement x:Name="LoadingVideo"
            AutoPlay="False"
            AreTransportControlsEnabled="False"
            Visibility="Collapsed"
            
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Stretch="UniformToFill"
                    Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0" Grid.RowSpan="3" Source="ms-appx:///Assets/videos/LoadingVideo.mp4"/>

                <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" x:Name="MainChatContent">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="80"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" BorderThickness="0,0,0,4" BorderBrush="#191919">
                <Button Style="{StaticResource MinorButton}"  HorizontalAlignment="Stretch" VerticalAlignment="Center" MaxHeight="85" MaxWidth="100" Click="GoHome" IsTabStop="False">
                            <Image Source="/images/back.png" Height="25" Width="25"/>
                        </Button>
                        <TextBlock x:Name="ScenarioTitleText" Text="A la Restaurant" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="26" FontFamily="Segoe UI Variable"/>
                    </StackPanel>
                    <Grid x:Name="MainContent" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="10" Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <ScrollViewer x:Name="ChatScrollViewer"  Background="#FF29292B" Margin="10" Padding="10" BorderBrush="#FF2B2B2B" Grid.Row="0" Grid.Column="1" CornerRadius="16">
                        <StackPanel x:Name="ChatStackPanel" Orientation="Vertical" Margin="10"/>
                    <!-- Chat messages will be added here dynamically -->


                        </ScrollViewer>

                <StackPanel x:Name="AnimatedContainer" Grid.Column="2" Grid.Row="0" Orientation="Vertical">
                    <StackPanel.RenderTransform>
                        <TranslateTransform x:Name="SlideTransform"/>
                    </StackPanel.RenderTransform>
                    <RichEditBox Name="CorrectedUserDisplay" Margin="10,10,10,0" Padding="10" Foreground="White" FontFamily="Segoe UI Variable" Height ="200" MaxHeight="150" VerticalAlignment="Top" Background="#222222" BorderThickness="1" BorderBrush="#212121" IsReadOnly="True" IsTabStop="False" IsHitTestVisible="False" FontSize="18"/>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/images/edit-2.png" MaxWidth="16" MaxHeight="16" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10,0,0,0"/>

                        <TextBlock Text="Corrected input" FontSize="16" FontFamily="Segoe UI Variable" Foreground="#505050" Margin="10,0"/>


                    </StackPanel>
                </StackPanel>


                <RichEditBox Name="InputBox"
                Background="Transparent"
                Foreground="White"
                PlaceholderText="Type in here"
                BorderThickness="1"
               
                KeyDown="InputBox_KeyDown"
                AcceptsReturn="False"
                Height="40" 
                Grid.Row="1" 
                Grid.Column="1" 
                Padding="4" 
                Margin="10"
                FontFamily="Segoe UI Variable"
                IsSpellCheckEnabled="False"/>
                        <Image x:Name="scenarioImage" MinWidth="150" MinHeight="150"  MaxWidth="200" MaxHeight="200" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"></Image>

                    </Grid>
                </Grid>
            </Grid>
</Page>
