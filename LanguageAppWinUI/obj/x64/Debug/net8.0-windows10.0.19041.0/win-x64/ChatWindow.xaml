<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="LanguageAppWinUI.ChatWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LanguageAppWinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="ChatWindow">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="500" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border Background="#FF2B2B2B" Padding="10" Width="500" Height="500" BorderBrush="#FF2B2B2B" Grid.Row="0">

            <RichTextBlock x:ConnectionId='5' Name="ChatDisplay" Width="500" Height="500" Foreground="White">
                <Paragraph>
                    <Run Text="Chatbox area"></Run>
                </Paragraph>
            </RichTextBlock>
        </Border>
        <RichTextBlock x:ConnectionId='2' Name="AiFeedbackDisplay" Width="400" Height="300" Foreground="White" Grid.Row="0" HorizontalAlignment="Right">
            <Paragraph>
                <Run Text="Feedback area"></Run>
            </Paragraph>
        </RichTextBlock>
        <RichEditBox x:ConnectionId='3' Name="CorrectedUserDisplay" Width="400" Height="300" Foreground="White" Grid.Row="0" HorizontalAlignment="Left">
            
        </RichEditBox>
        <Border
            Background="#FF2B2B2B"
            BorderBrush="#FF2B2B2B"
            BorderThickness="1"
            Width="500"
            Height="40"
            Grid.Row="1">

            <RichEditBox x:ConnectionId='4' Name="InputBox"
                Background="Transparent"
                Foreground="White"
                PlaceholderText="Type in here"
                BorderThickness="0"
                Padding="4"
                                          />
        </Border>
    </Grid>
    
</Window>

