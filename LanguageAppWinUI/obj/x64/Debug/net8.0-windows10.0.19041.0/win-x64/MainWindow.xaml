<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="LanguageAppWinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LanguageAppWinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="LanguageAppWinUI">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Frame x:ConnectionId='2' x:Name="MainFrame">

        <Grid x:ConnectionId='3' x:Name="BaseLayout" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>

            <Border Background="#222222"
        CornerRadius="8,0,0,8" BorderThickness="0,0,2,0" BorderBrush="#181818">
                <Grid x:ConnectionId='39' Background="#222222" Margin="0,10,0,10" x:Name="Sidebar" VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50" />

                    </Grid.RowDefinitions>
                    <TextBlock Text="Language App" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" FontSize="20" FontFamily="Segoe UI Variable"/>
                    <Button x:ConnectionId='40' Style="{StaticResource SidebarButton}" Grid.Row="1"                    Tag="HomePage" x:Name="HomeButton">



                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Padding="16,0,0,0">
                            <Image Source="/images/home.png" Width="18" Height="18" />
                            <TextBlock Text="Home" Margin="16,0,0,0"/>

                        </StackPanel>
                    </Button>

                    <Button x:ConnectionId='41' Style="{StaticResource SidebarButton}" Grid.Row="2"                    Tag="ScenariosPage">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Padding="16,0,0,0">
                            <Image Source="/images/grid.png" Width="18" Height="18" />
                            <TextBlock Text="Scenarios" Margin="16,0,0,0"/>

                        </StackPanel>
                    </Button>
                    <Button x:ConnectionId='42' x:Name="FlashcardsButton" Style="{StaticResource SidebarButton}" Grid.Row="3"                    Tag="FlashcardsPage">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Padding="16,0,0,0">
                            <Image Source="/images/flashcards.png" Width="18" Height="18" />
                            <TextBlock Text="Flashcards" Margin="16,0,0,0"/>

                        </StackPanel>
                    </Button>
                    <Button x:ConnectionId='43' Style="{StaticResource SidebarButton}" Grid.Row="4"                    Tag="MistakesPage">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Padding="16,0,0,0">
                            <Image Source="/images/book-open.png" Width="18" Height="18" />
                            <TextBlock Text="Mistakes" Margin="16,0,0,0"/>

                        </StackPanel>
                    </Button>
                    <Button x:ConnectionId='44' Style="{StaticResource SidebarButton}" Grid.Row="5"                 Tag="ExitButton" VerticalAlignment="Bottom">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Padding="16,0,0,0">
                            <Image Source="/images/exit.png" Width="18" Height="18" />
                            <TextBlock Text="Exit" Margin="16,0,0,0"/>

                        </StackPanel>
                    </Button>


                </Grid>
            </Border>
            <Grid x:ConnectionId='4' Tag="PageContent"  x:Name="ScenariosPage"  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="20" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />

                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />

                </Grid.ColumnDefinitions>



                <Button x:ConnectionId='30' Style="{StaticResource ScenarioButton}" Tag="At the Bakery. (bakery) You are a french girl in a bakery" Grid.Row="0" Grid.Column="0"                     >
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <Image Source="/images/bakery.png" Height="100" Width="100"/>
                        <TextBlock Text="At the Bakery" Foreground="White" FontSize="20"/>
                    </StackPanel>
                </Button>

                <Button x:ConnectionId='31' Style="{StaticResource ScenarioButton}" Tag="Ordering at a Restaurant. (restaurant) You are a a waiter at a restaurant" Grid.Row="0" Grid.Column="1"                     >
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <Image Source="/images/restaurant.png" Height="100" Width="100"/>
                        <TextBlock Text="Ordering at a Restaurant" Foreground="White" FontSize="20"/>
                    </StackPanel>
                </Button>

                <Button x:ConnectionId='32' Style="{StaticResource ScenarioButton}" Tag="Checking in to a Hotel. (hotel) You are a receptionist at the front desk of a hotel" Grid.Row="0" Grid.Column="2"                     >
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <Image Source="/images/hotel.png" Height="100" Width="100"/>
                        <TextBlock Text="Checking in to a Hotel" Foreground="White" FontSize="20"/>
                    </StackPanel>
                </Button>

                <Button x:ConnectionId='33' Style="{StaticResource ScenarioButton}" Tag="At the Grocery Store. (grocery) You are an employee at the grocery store asking if theres anything you can help with" Grid.Row="1" Grid.Column="0"                     >
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <Image Source="/images/grocery.png" Height="100" Width="100"/>
                        <TextBlock Text="At the Grocery Store" Foreground="White" FontSize="20"/>
                    </StackPanel>
                </Button>

                <Button x:ConnectionId='34' Style="{StaticResource ScenarioButton}" Tag="At the Airport. (airport) You are a french guy at the airport" Grid.Row="1" Grid.Column="1"                     >
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <Image Source="/images/airport.png" Height="100" Width="100"/>
                        <TextBlock Text="At the Airport" Foreground="White" FontSize="20"/>
                    </StackPanel>
                </Button>

                <Button x:ConnectionId='35' Style="{StaticResource ScenarioButton}" Tag="Asking for Directions. (directions) You are a local helping with directions. You should ask if theres any monuents in paris they want to see and then say how to get there" Grid.Row="1" Grid.Column="2"                     >
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <Image Source="/images/directions.png" Height="100" Width="100"/>
                        <TextBlock Text="Asking for Directions" Foreground="White" FontSize="20"/>
                    </StackPanel>
                </Button>

                <Button x:ConnectionId='36' Style="{StaticResource ScenarioButton}" Tag="Seeing a Doctor. (doctor) You are a french doctor, seeing what is wrong with the user and asking about how they feel" Grid.Row="2" Grid.Column="0"                     >
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <Image Source="/images/doctor.png" Height="100" Width="100"/>
                        <TextBlock Text="Seeing a Doctor" Foreground="White" FontSize="20"/>
                    </StackPanel>
                </Button>

                <Button x:ConnectionId='37' Style="{StaticResource ScenarioButton}" Tag="At the Park. (park) You are a french girl hanging out with the user at the park, have a lively chat about anything really, bring up a light conversation starter" Grid.Row="2" Grid.Column="1"                     >
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <Image Source="/images/park.png" Height="100" Width="100"/>
                        <TextBlock Text="At the Park" Foreground="White" FontSize="20"/>
                    </StackPanel>
                </Button>

                <Button x:ConnectionId='38' Style="{StaticResource ScenarioButton}" Tag="At a University. (university) You are a maths professor at a university" Grid.Row="2" Grid.Column="2"                     >
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <Image Source="/images/university.png" Height="100" Width="100"/>
                        <TextBlock Text="At a University" Foreground="White" FontSize="20"/>
                    </StackPanel>
                </Button>


            </Grid>
            <Grid x:ConnectionId='5' x:Name="HomePage" Grid.Column="1" Tag="PageContent" Margin="50" HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="3.2*"/>
                    <RowDefinition Height=".5*"/>
                    <RowDefinition Height=".5*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>
                <TextBlock x:ConnectionId='17' x:Name="WelcomeText" Text="Welcome Back!" Grid.Row="0" HorizontalAlignment="Center" FontSize="32" VerticalAlignment="Center" FontFamily="Segoe UI Variable"/>
                <TextBlock x:ConnectionId='18' x:Name="YouStudiedForText" Text="You have studied for 3 minutes today. Keep it up!" Grid.Row="1" HorizontalAlignment="Center" FontSize="24" VerticalAlignment="Center" Margin="10" FontFamily="Segoe UI Variable"/>
                <Grid Grid.Row="2" Margin="0,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>

                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" BorderThickness="1" Background="#303030" Padding="20" CornerRadius="8" Margin="20" MinWidth="200" MaxWidth="230"  MaxHeight="150">
                        <TextBlock Text="Scenarios: Messages Sent" FontSize="16" FontFamily="Segoe UI Variable"/>
                        <TextBlock x:ConnectionId='28' x:Name="TotalMessagesSentText" Text="500" FontSize="40" FontFamily="Segoe UI Variable"/>
                        <TextBlock x:ConnectionId='29' x:Name="MessagesSentTodayText" Text="20 Today" FontSize="16" FontFamily="Segoe UI Variable"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" BorderThickness="1" Background="#303030" Padding="20" CornerRadius="8" Margin="20" MinWidth="200" MaxWidth="230" MaxHeight="150">
                        <TextBlock Text="Today's Tip" FontSize="16" FontFamily="Segoe UI Variable"/>
                        <TextBlock x:ConnectionId='26' x:Name="TodaysTipText" Text="Use etre for past tense" FontSize="23" TextWrapping="Wrap" FontFamily="Segoe UI Variable"/>
                        <TextBlock x:ConnectionId='27' x:Name="TodaysDateText" Text="7/23/25" FontSize="16" FontFamily="Segoe UI Variable"/>
                    </StackPanel>
                    <StackPanel Grid.Column="2" BorderThickness="1" Background="#303030" Padding="20" CornerRadius="8" Margin="20" MinWidth="200" MaxWidth="230" MaxHeight="150" >
                        <TextBlock Text="Total Time Spent Learning" FontSize="16" FontFamily="Segoe UI Variable"/>
                        <TextBlock x:ConnectionId='24' x:Name="TotalTimeSpentText" Text="2:20" FontSize="40" FontFamily="Segoe UI Variable"/>
                        <TextBlock x:ConnectionId='25' x:Name="TodaysTimeSpentText" Text="00:20 Today" FontSize="16" FontFamily="Segoe UI Variable"/>
                    </StackPanel>
                </Grid>
                <TextBlock Text="Jump back in" Grid.Row="4" HorizontalAlignment="Left" FontSize="24" VerticalAlignment="Top" Margin="25,0,0,0" FontFamily="Segoe UI Variable"/>
                <Grid Grid.Row="5" Margin="0,20,0,0" MaxWidth="600" HorizontalAlignment="Left">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button x:ConnectionId='19' x:Name="MostRecentScenarioBlock" Style="{StaticResource Flashcard}" Margin="20,0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Stretch"  MinHeight="150" MaxHeight="200" Width="230"                     >
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image x:ConnectionId='22' x:Name="MostRecentScenarioImage" Source="/images/bakery.png" Height="50" Width="50" Margin="10"/>
                            <TextBlock x:ConnectionId='23' x:Name="MostRecentScenarioTitle" Text="At the Bakery" FontSize="20"/>
                            <TextBlock Text="Most Recent Scenario" FontSize="16" Foreground="#999999"/>

                        </StackPanel>
                    </Button>
                    <Button x:ConnectionId='20' x:Name="RecommendedFlashcardsBlock" Style="{StaticResource Flashcard}" Margin="20, 0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Stretch" MinHeight="150" MaxHeight="200" Width="230"                                  >
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="/images/bakery.png" Height="50" Width="50" Margin="10"/>
                            <TextBlock x:ConnectionId='21' x:Name="RecommendedFlashcardsText" Text="Flashcard Pack" FontSize="20"/>
                            <TextBlock Text="Recommended Flashcards" FontSize="16" Foreground="#999999"/>

                        </StackPanel>
                    </Button>
                </Grid>
            </Grid>
            <Grid x:ConnectionId='6' x:Name="FlashcardsPage" Grid.Column="1" Tag="PageContent" Margin="120,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="8*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="*"/>

                </Grid.RowDefinitions>
                <Grid Grid.Row="1" HorizontalAlignment="Center" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:ConnectionId='15' x:Name="FlashcardPackTitleText" Text="flashy (12/45)" FontSize="34" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Margin="10" FontFamily="Segoe UI Variable"/>
                    <DropDownButton Style="{StaticResource MinorButton}" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" MaxHeight="64" MaxWidth="64" CornerRadius="0">
                        <Image Source="/images/menu.png" Height="30" Width="30"/>
                        <DropDownButton.Flyout>
                            <MenuFlyout x:ConnectionId='16' Placement="Bottom" x:Name="FlashcardPacksMenuFlyout">

                            </MenuFlyout>
                        </DropDownButton.Flyout>
                    </DropDownButton>
                </Grid>
                <Button x:ConnectionId='10' Style="{StaticResource Flashcard}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="40" Background="#222222"  MaxWidth="700" CornerRadius="16" Grid.Row="2"                        >
                    <TextBlock x:ConnectionId='14' x:Name="FlashcardText" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36" Foreground="White" Text="hety" FontFamily="Segoe UI Variable"/>

                </Button>
                <Grid Grid.Row="3" MaxWidth="700">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>


                    <Button x:ConnectionId='11' Style="{StaticResource MinorButton}" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" MaxHeight="85" MaxWidth="100"                      >
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <Image Source="/images/chevronleft.png" Height="30" Width="30"/>
                        </StackPanel>
                    </Button>
                    <Button x:ConnectionId='12' Style="{StaticResource MinorButton}" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" MaxHeight="85" MaxWidth="100"                        >
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <Image Source="/images/rotate.png" Height="30" Width="30"/>
                        </StackPanel>
                    </Button>
                    <Button x:ConnectionId='13' Style="{StaticResource MinorButton}" Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" MaxHeight="85" MaxWidth="100"                       >
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <Image Source="/images/chevronright.png" Height="30" Width="30"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Grid>
            <Grid x:ConnectionId='7' x:Name="MistakesPage" Grid.Column="1" Tag="PageContent">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="7*"/>
                </Grid.RowDefinitions>
                <Border Grid.Row="0" BorderThickness="0,0,0,2" BorderBrush="#181818" Padding="20">
                    <TextBlock Text="Mistakes Overview" FontSize="20" VerticalAlignment="Center" FontFamily="Segoe UI Variable"/>
                </Border>
                <ScrollViewer Grid.Row="1">
                    <RichTextBlock x:ConnectionId='9' x:Name="MistakesText" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" MaxWidth="700" TextWrapping="Wrap" FontFamily="Segoe UI Variable">

                    </RichTextBlock>

                </ScrollViewer>
            </Grid>
            <Grid x:ConnectionId='8' x:Name="SettingsPage" Grid.Column="1" Tag="PageContent">
                <TextBlock Text="Settings!!" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"/>
            </Grid>

        </Grid>

    </Frame>
</Window>

